	$fn = '/var/www/tmp/hits_counter.txt';
	$hits = 0;
	// read current hits
	if (($hits = file_get_contents($fn)) === false)
	{
	    $hits = 0;
	}
	// write one more hit

	if (!isset($_SESSION['page_visited_already']))
	{
	    if (($fp = fopen($fn, 'w+')) !== false)
	    {
	        if (flock($fp, LOCK_EX))
	        {
	            $hits = $hits+1;
	            fwrite($fp, $hits, strlen($hits));
	            flock($fp, LOCK_UN);
	            $_SESSION['page_visited_already'] = 1;
	        }
	        fclose($fp);
	    }
	    
	}
